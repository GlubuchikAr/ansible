server {
    listen {{ lighthouse_nginx_port }};
    server_name 0.0.0.0;

    access_log /var/log/nginx/lighthouse-access.log;

    location /1/ {
        root {{ lighthouse_data_dir }};
        index index.html;

    }
}

server {
    listen 80;
    server_name lighthouse;
    root /opt/lighthouse;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }
}